$(document).ready(function() {
	$maxHeight=$("div.menuPointCon").height();
	$("div.menuPointCon").css("height","0px");
	$("div.menuTop").mouseover(function () {
		//$(this).parent().children("div.menuPointCon").animate({"opacity":"show"},500);
		$(this).parent().children("div.menuPointCon").stop(false,true).animate(
		{"height":""+$maxHeight+"px","opacity":"show"},{duration:"slow"});
	}).mouseleave(function () {
		$(this).parent().children("div.menuPointCon").stop(true,false).animate(
		{"height":"0","opacity":"hide"},{duration:"slow"});
	});
});